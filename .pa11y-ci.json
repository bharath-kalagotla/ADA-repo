{
  "defaults": {
    "standard": "WCAG2AA",
    "timeout": 50000,
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox"
      ]
    },
    "reporters": [
      "cli",
      [
        "pa11y-ci-reporter-html",
        {
          "destination": "./reports"
        }
      ]
    ]
  },
  "urls": [
    {
      "url": "http://127.0.0.1:4000/shopping-list",
      "wait": 50000
    },
    {
      "url": "http://127.0.0.1:4000/recipes",
      "wait": 50000
    },
    {
      "url": "http://127.0.0.1:4000/recipes/new",
      "wait": 50000
    },
    {
      "url": "http://127.0.0.1:4000/recipes/*",
      "wait": 50000
    }
  ]
}
