{
  "defaults": {
    "standard": "WCAG2AA",
    "chromeLaunchConfig": {
      "headless": "true",
      "executablePath": "/usr/bin/chromium-browser",
      "ignoreDefaultArgs": "['--disable-extensions']"
    },
    "reporters": [
      "cli",
      [
        "pa11y-ci-reporter-html",
        {
          "destination": "./reports"
        }
      ]
    ]
  },
    "urls": [
      "http://localhost:4200/recipes",
      "http://localhost:4200/shopping-list",
      "http://localhost:4200/recipes/new",
      "http://localhost:4200/recipes/*"
    ]
}
