{
  "defaults": {
    "standard": "WCAG2AA",
    "timeout": 60000,
    "threshold": 6,
    "runners": [
      "axe"
    ],
    "chromeLaunchConfig": {
      "args": [
        "--no-sandbox"
      ]
    },
    "reporters": [
      "cli",
      [
        "pa11y-ci-reporter-html",
        {
          "destination": "./reports"
        }
      ]
    ]
  },
  "urls": [
    {
      "url": "http://localhost:4200/shopping-list"
    },
    {
      "url": "http://localhost:4200/recipes"
    },
    {
      "url": "http://localhost:4200/recipes/new"
    },
    {
      "url": "http://localhost:4200/recipes/*"
    }
  ]
}
